<Page
    x:Class="IMAdViewFromXAML.InterstitialAd"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IMAdViewFromXAML"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        
        <StackPanel Orientation="Vertical" >
            <TextBlock Text="Interstitial Ad" 
                       Margin="40,40,0,0"
                       FontSize="24">
                
            </TextBlock>
            
            <Button x:ConnectionId='1' Name="btnLoadInterstitialAd"
                    Content="Load Interstitial Ad"
                    Margin="0,50,0,0"
                    HorizontalAlignment="Center"
                                                         
                    >
                
            </Button>
            
           
            
            <Button x:ConnectionId='2' Name="btnGoback"
                    Content="Back"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"
                                             >
                
            </Button>
        </StackPanel>

    </Grid>
</Page>

