<UserControl x:Class="LuckyBallsSpirit.Controls.ToolControl.FloatControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="50" d:DesignWidth="480">

    <UserControl.Resources>
        <Storyboard x:Name="ShowPopupStory">
            <DoubleAnimation
                  Storyboard.TargetName="flyoutPopup"
                  Storyboard.TargetProperty="Opacity"
                  From="0.0" To="1.0" Duration="0:0:1"/>
        </Storyboard>

        <Storyboard x:Name="HidePopupStory">
            <DoubleAnimation
                  Storyboard.TargetName="flyoutPopup"
                  Storyboard.TargetProperty="Opacity"
                  From="1.0" To="0.0" Duration="0:0:1"/>
        </Storyboard>
    </UserControl.Resources>
    
    <Grid x:Name="LayoutRoot" Background="Transparent">

    </Grid>
</UserControl>