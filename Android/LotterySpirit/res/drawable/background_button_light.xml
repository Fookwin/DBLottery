<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="@color/darkgrey" />
            <padding android:bottom="2dip" android:left="10dip" android:right="10dip" android:top="2dip" />
            <solid android:color="@color/lightgrey" />
        </shape>
    </item>
    
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="@color/darkgrey" />
            <padding android:bottom="2dip" android:left="10dip" android:right="10dip" android:top="2dip" />
            <solid android:color="@color/lightgrey" />
        </shape>
    </item>
    
    <item android:state_selected="true">
        <shape>
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="@color/darkred" />
            <padding android:bottom="2dip" android:left="10dip" android:right="10dip" android:top="2dip" />
            <solid android:color="@color/coral" />
        </shape>
    </item>
    
    <item>
        <shape>
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="@color/darkgrey" />
            <padding android:bottom="2dip" android:left="10dip" android:right="10dip" android:top="2dip" />
            <solid android:color="@color/transparent" />
        </shape>
    </item>
    
</selector>