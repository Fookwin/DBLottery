<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:id="@android:id/background">
        <shape>
            <size android:height="40dip"/>
            <gradient
                android:angle="270.0"
                android:centerY="20.0"
                android:endColor="@color/dimgrey"
                android:startColor="@color/dimgrey" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <size android:height="40dip"/>
                <gradient
                    android:angle="270.0"
                    android:centerY="20.0"
                    android:endColor="@color/darkred"
                    android:startColor="@color/darkred" />
            </shape>
        </clip>
    </item>

</layer-list>
