<UserControl
    x:Class="LuckyBallSpirit.Controls.AdViewCtrl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="AdCtrl" Height="90" Width="728" Visibility="Collapsed">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
            <Button x:Name="BT_Delete" Click="BT_Delete_Click" Style="{StaticResource TextButtonStyle}" Margin="10,2">
                <Button.Content>
                    <Image Source="ms-appx:///Resources/delete.png" Width="12" Height="12"/>
                </Button.Content>
            </Button>
        </StackPanel>
    </Grid> 

</UserControl>
