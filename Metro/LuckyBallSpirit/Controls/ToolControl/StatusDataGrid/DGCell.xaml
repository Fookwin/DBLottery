<UserControl
    x:Class="LuckyBallSpirit.Controls.ToolControl.StatusDataGrid.DGCell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LuckyBallSpirit.Controls.ToolControl.StatusDataGrid"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border x:Name="CellBorder" Background="White" BorderBrush="LightGray" BorderThickness="0.1">
        <Grid>
            <Ellipse x:Name="CellCircleBk" Height="20" Width="20" Visibility="Collapsed"/>
            <TextBlock x:Name="CellTextBlock" Foreground="DarkGray" FontSize="15" TextAlignment="Center" 
                   VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap"/>
        </Grid>
    </Border>
    
</UserControl>
